<%- model_class = Season -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @season.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @season.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weeks) %>:</strong></dt>
  <dd><%= @season.weeks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:playoff_weeks) %>:</strong></dt>
  <dd><%= @season.playoff_weeks %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              seasons_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_season_path(@season), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              season_path(@season),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
