<%= simple_form_for @season, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :start_date, :as => :string, :input_html => {'data-behaviour' => 'datepicker'} %>
  <%= f.input :weeks, :label => 'Season Length' %>
  <%= f.input :playoff_weeks, :label => 'Playoff Length' %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                seasons_path, :class => 'btn' %>
  </div>
<% end %>
