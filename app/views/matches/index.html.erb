<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
	
<table class="table table-striped">
  <thead>
	<tr>
		<th>Week</th>
    	<% (1..4).each do |i| %>
			<th>Match <%= i %></th>
		<% end %>
	</tr>
  </thead>
  <tbody>
	<%	(1..10).each do |i| %>
		<%	next_week = Match.where("week = '#{i}'") %>
			<tr><td>Week <%= i %></td>
			<% next_week.each do |match| %>
				<td>
					<%= link_to match.players[0].handle, player_path(match.players[0].id) %>
					vs
					<%= link_to match.players[1].handle, player_path(match.players[1].id) %>
					<br/><br/>
					<div><strong><%= match.state %></strong></div>
					<br/>
					<div>
					
		          	<%= link_to 'Report Results',
		            		edit_match_path(match), :class => 'btn btn-primary btn-mini' %>
		          	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		                      match_path(match),
		                      :method => :delete,
		                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
		                      :class => 'btn btn-mini btn-danger' %>
					</div>
				</td>
			<% end %>
			<% (1..(4 - next_week.length)).each do |i| %>
				<td>TBD</td>
			<% end %>
			</tr>
		<% end %> 
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_match_path,
            :class => 'btn btn-primary' %>
