<%= simple_form_for @match, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :players, :as => :check_boxes, :hint => 'Choose 2 Players' %>
  <%= f.input :week, :label => "Week starting on...", :as => :string, :hint => 'Weeks start on Monday...', :input_html => { 'data-behavior' => 'datepicker'}  %>
  <%= f.button :submit, :class => 'btn-primary' %>
<% end %>

<script type="text/javascript">
	$(document).on("focus", "[data-behavior~='datepicker']", function(e){
	    $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
	});
</script>