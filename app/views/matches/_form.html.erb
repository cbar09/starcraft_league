<%= form_for @match, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :player1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :player1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :player2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :player2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :winner, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :winner, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :week, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :week, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matches_path, :class => 'btn' %>
  </div>
<% end %>
