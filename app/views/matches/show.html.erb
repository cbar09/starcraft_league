<% p1 = @match.players[0]; %>
<% p2 = @match.players[1]; %>
<% winner = "match in progress" %>

<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player1) %>:</strong></dt>
  <dd><%= @match.players[0].handle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player2) %>:</strong></dt>
  <dd><%= @match.players[1].handle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winner) %>:</strong></dt>
  <dd><%= winner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:week) %>:</strong></dt>
  <dd><%= @match.week %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matches_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_match_path(@match), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              match_path(@match),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
