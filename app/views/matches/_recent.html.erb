<div class="row">
	<!-- Current Matches -->
	<div class="span4">
		<div class="alert alert-info">
			<h3>This Week's Matches [Week <% %>]</h3>
			<ul class="match-list">
				<% Match.current(1).each do |match| %>
				<li>
					<%= link_to match.display_vs , match_path(match.id) %> 
					<span class="label label-success">Completed</span>
				</li>
			<% end %>
			</ul>
	
			<hr/>

			<h3>Outstanding Matches</h3><br/>
			<ul>
			<% Match.outstanding(1).each do |match| %>
				<li>
					<%= link_to match.players[0].handle, player_path(match.players[0].id) %>
					vs
					<%= link_to match.players[1].handle, player_path(match.players[1].id) %>
				</li>
			<% end %>
			</ul>
		</div>
	</div>
</div>