<fieldset>
	<legend>Game <%= game_number + 1 %></legend>
	<%= f.input :game_number, :as => :hidden, :input_html => {:value => game_number} %>
	
	<div style="display:inline-block">
	<%= render "game_player", :f => f, :game_player => game.games_players[0],  :player => @p1 %>
	</div>
	
	<div style="display:inline-block; padding: 50px 50px 0; vertical-align: top; font-size: 2em">
	<strong> VS </strong>
	</div>
	
	<div style="display:inline-block">
	<%= render "game_player", :f => f, :game_player => game.games_players[1], :player => @p2 %>
	</div>
	
</fieldset>